{
    "title": "SFTP",
    "description": "Provides file access and transfer using SSH File Transfer Protocol",
    "credentials" : {
        "fields": {
            "host":{
                "viewClass":"TextFieldView",
                "label":"Server Url",
                "required":true,
                "placeholder":"sftp://host:port",
                "note":"Use an SFTP url in the format <code>sftp://host:port</code> or <code>sftp://host</code> which defaults to port 22"
            },
            "username": {
                "viewClass": "TextFieldView",
                "label": "User Name",
                "required": true,
                "placeholder": "Paste your SFTP user name"
            },
            "password": {
                "viewClass": "PasswordFieldView",
                "label": "Password",
                "required": true,
                "placeholder": "Paste your SFTP password"
            }
        }
    },
    "actions": {
        "upload": {
            "main": "./lib/actions/upload.js",
            "title": "Upload files",
            "description": "Upload files (attachments) to SFTP directory",
            "fields": {
                "directory":{
                    "viewClass":"TextFieldView",
                    "label":"Directory Name",
                    "required":true,
                    "placeholder":"/foo/bar",
                    "note": "Directory will be created if not exists, attachments with the same name would be overwritten"
                }
            }
        },
        "put": {
            "main": "./lib/actions/put.js",
            "title": "Put files in director",
            "description": "Put files (attachments) to SFTP existing directory",
            "fields": {
                "directory":{
                    "viewClass":"TextFieldView",
                    "label":"Directory Name",
                    "required":true,
                    "placeholder":"/foo/bar",
                    "note": "Directory must exist, attachments with the same name would be overwritten"
                }
            }
        },
        "readdir": {
            "main": "./lib/actions/readdir.js",
            "title": "Read files from directory",
            "description": "Read files from SFTP directory and emit each file as an attachment",
            "fields": {
                "directory": {
                    "viewClass": "TextFieldView",
                    "label": "Directory Name",
                    "required": true,
                    "placeholder": "/foo/bar",
                    "note": "Read files from sftp directory"
                },
                "glob": {
                    "viewClass": "TextFieldView",
                    "label": "Glob pattern",
                    "required": false,
                    "placeholder": "*.xml",
                    "note": "Glob pattern match file names to be read"
                },
                "regexp": {
                    "viewClass": "TextFieldView",
                    "label": "Regular expression",
                    "required": false,
                    "placeholder": "^order_[0-9]+\\.pdf$",
                    "note": "Regular expression to match file names to be read"
                },
                "deleteAfterRead": {
                    "viewClass": "CheckBoxView",
                    "label": "Delete files after processing"
                }
            }
        }
    },
    "triggers": {
        "read": {
            "main": "./lib/triggers/read.js",
            "title": "Read files",
            "type": "polling",
            "description": "Will continuously poll remote SFTP location for files that match given pattern. Found files will be transferred as attachments to the next component.",
            "fields":{
                "directory":{
                    "viewClass":"TextFieldView",
                    "label":"Directory Name",
                    "required":true,
                    "placeholder":"Directory"
                },
                "pattern":{
                    "viewClass":"TextFieldView",
                    "label":"Pattern to Match Files",
                    "required":false,
                    "placeholder":"Pattern"
                }
            },
            "metadata": {
                "out" : {
                    "type": "object",
                    "properties" : {
                        "filename" : {
                            "title": "File Name",
                            "type": "string",
                            "required": true
                        },
                        "size" : {
                            "title": "File Size",
                            "type": "number",
                            "required": true
                        }
                    }
                }
            }
        }
    }
}